# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/						controllers.PlanController.plan()
GET     /plan.html				controllers.PlanController.plan()
GET		/						controllers.PlanController.displayMessage(message :String)
GET		/ajax					controllers.PlanController.ajax(name:String, location:String)
POST	/submitFormLostCat		controllers.PlanController.submitFormLostCat()
POST	/submitFormFoundCat		controllers.PlanController.submitFormFoundCat()
GET     /index.html             controllers.Application.index()
GET     /links.html             controllers.Application.links()
GET     /contact.html           controllers.Application.contact()

GET		/errorPage.html				controllers.ErrorController.showError(error:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file       	controllers.Assets.at(path="/public", file)
